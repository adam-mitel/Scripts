	Assign SendRec "<#2>00TKEIN<Date:TEXT:8:RJ,SP><Time:TEXT:6:RJ,SP><#3>"
	Call SendRecord

Exit
; ************************************************************************


; ************************************************************************
;  SHUTDOWN
